<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --bg-color: #111827;
            --text-color: #f3f4f6;
            --card-bg: #1f2937;
            --border-color: #374151;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .container {
            background-color: var(--card-bg);
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            width: 100%;
            max-width: 48rem;
            border: 1px solid var(--border-color);
        }

        h1 {
            font-size: 1.875rem;
            font-weight: 700;
            margin-bottom: 2rem;
            text-align: center;
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 2rem 0 1rem;
            color: var(--text-color);
        }

        .info-section {
            background-color: var(--bg-color);
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid var(--border-color);
        }

        .info-item {
            margin-bottom: 0.5rem;
        }

        .info-item:last-child {
            margin-bottom: 0;
        }

        .info-label {
            font-weight: 600;
            color: #9ca3af;
            margin-right: 0.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background-color: var(--bg-color);
            border-radius: 0.5rem;
            overflow: hidden;
        }

        th, td {
            padding: 0.75rem;
            text-align: left;
            border: 1px solid var(--border-color);
        }

        th {
            background-color: var(--card-bg);
            font-weight: 600;
            color: #9ca3af;
        }

        tr:nth-child(even) {
            background-color: rgba(99, 102, 241, 0.05);
        }

        .back-button {
            background-color: var(--primary-color);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s ease;
            width: 100%;
            margin-top: 1.5rem;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .back-button:hover {
            background-color: var(--primary-hover);
        }

        .back-button:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.3);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Results</h1>
        
        <% if (data) { %>
            <% if (data.vendor_information) { %>
                <div class="info-section">
                    <div class="info-item">
                        <span class="info-label">Vendor:</span>
                        <%= data.vendor_information.vendor_name.value %>
                    </div>
                </div>
            <% } %>

            <% if (data.totals) { %>
                <div class="info-section">
                    <div class="info-item">
                        <span class="info-label">Total:</span>
                        â‚¬<%= data.totals.total_amount.value %>
                    </div>
                </div>
            <% } %>

            <% if (data.invoice_metadata) { %>
                <div class="info-section">
                    <div class="info-item">
                        <span class="info-label">Invoice No:</span>
                        <%= data.invoice_metadata.invoice_number.value %>
                    </div>
                </div>
            <% } %>

            <% if (data.line_items && data.line_items.length > 0) { %>
                <h2>Line Items</h2>
                <table>
                    <tr>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                    <% data.line_items.forEach(item => { %>
                        <tr>
                            <td><%= item.description.value %></td>
                            <td><%= item.quantity.value %></td>
                            <td><%= item.unit_price.value %></td>
                            <td><%= item.total_price.value %></td>
                        </tr>
                    <% }) %>
                </table>
            <% } %>
        <% } else { %>
            <div class="info-section">
                <div class="info-item">No results available</div>
            </div>
        <% } %>

        <a href="/" class="back-button">Upload Another File</a>
    </div>
</body>
</html>
